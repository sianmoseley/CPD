<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_details2">

    <!--TODO: LAYOUT COULD STILL BE IMPROVED-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activityNameHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Activity Name:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityDateHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="Activity Date:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityHoursHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:text="Activity Hours:"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityMinsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="Activity Mins:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsMins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityTypeHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:text="Activity Type:"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityDescirptionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="Activity Description:"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityDetailsRef1Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="What did you do?"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsRef1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityDetailsRef2Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="What did you learn?"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsRef2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityDetailsRef3Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="16dp"
                android:text="What would you now do differently?"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsRef3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <TextView
                android:id="@+id/activityDetailsRef4Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="Who has benefited?"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityDetailsRef4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="TextView"/>

            <ImageView
                android:id="@+id/activityImgPreview"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"/>


        </LinearLayout>


    </ScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>